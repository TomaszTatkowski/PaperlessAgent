<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tan_background"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/photo_container_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="25dp"
                android:layout_weight="0.1"
                android:src="@drawable/animation_camera" />

            <ImageView
                android:id="@+id/Photo_view_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:padding="3dp"/>

            <ImageView
                android:id="@+id/bin_1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="25dp"
                android:layout_weight="0.1"
                android:src="@drawable/animation_bin" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/photo_container_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="25dp"
                android:layout_weight="0.1"
                android:src="@drawable/animation_camera" />

            <ImageView
                android:id="@+id/Photo_view_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:padding="3dp"/>

            <ImageView
                android:id="@+id/bin_2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="25dp"
                android:layout_weight="0.1"
                android:src="@drawable/animation_bin" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/photo_container_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="25dp"
                android:layout_weight="0.1"
                android:src="@drawable/animation_camera" />

            <ImageView
                android:id="@+id/Photo_view_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:padding="3dp"/>

            <ImageView
                android:id="@+id/bin_3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="25dp"
                android:layout_weight="0.1"
                android:src="@drawable/animation_bin" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/photo_container_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="25dp"
                android:layout_weight="0.1"
                android:src="@drawable/animation_camera" />

            <ImageView
                android:id="@+id/Photo_view_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:padding="3dp"/>

            <ImageView
                android:id="@+id/bin_4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="25dp"
                android:layout_weight="0.1"
                android:src="@drawable/animation_bin" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/photo_container_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/photo_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="25dp"
                android:layout_weight="0.1"
                android:src="@drawable/animation_camera" />

            <ImageView
                android:id="@+id/Photo_view_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_weight="1"
                android:padding="3dp"/>

            <ImageView
                android:id="@+id/bin_5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_margin="25dp"
                android:layout_weight="0.1"
                android:src="@drawable/animation_bin" />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="horizontal">


        <Button
            android:id="@+id/send_pictures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_animation"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"

            android:text="Send photos"
            android:textColor="@color/common_signin_btn_dark_text_default"
            android:onClick="SendImag"/>

        <Button
            android:id="@+id/button_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_weight="1"
            android:background="@drawable/button_animation_main"
            android:text="@string/next" />

    </LinearLayout>

</LinearLayout>